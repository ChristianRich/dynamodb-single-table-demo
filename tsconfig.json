{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "types": ["mocha", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}
